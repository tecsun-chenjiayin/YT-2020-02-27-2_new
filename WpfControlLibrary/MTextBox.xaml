<UserControl x:Class="WpfControlLibrary.MTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControlLibrary"
             Name="self"
             mc:Ignorable="d">
    <Grid>
        <Border Name="border1" Background="White" Margin="10" CornerRadius="10">
            <Grid>
                <TextBox Name="bk1" MaxLength="8" 
                         Margin="15" BorderThickness="0" 
                         VerticalContentAlignment="Center" 
                         HorizontalContentAlignment="Left" FontSize="45"
                         FontWeight="Bold" Focusable="False"
                         Opacity="0.2">
                    请输入用户名
                </TextBox>
                <TextBox Name="p1" Margin="10" Background="Transparent" 
                         BorderThickness="0" FontSize="55" 
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         TextChanged="p1_TextChanged"
                         MaxLength="16"
                ></TextBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>
