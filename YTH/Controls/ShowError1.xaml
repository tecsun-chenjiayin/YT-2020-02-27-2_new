<UserControl x:Class="YTH.Controls.ShowError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YTH.Controls"
             mc:Ignorable="d"  
             d:DesignHeight="768" d:DesignWidth="1513">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Name="error" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" TextWrapping="Wrap">错误信息：11111111111111111111111111111111111111111111111111111111111111111111111111111111</TextBlock>
            <Border Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"
                Name="back" Width="271" Height="73" 
                    CornerRadius="5" Background="#FA5041" 
                    Margin="0,60,0,0" PreviewMouseDown="back_PreviewMouseDown">
                <TextBlock VerticalAlignment="Center"  HorizontalAlignment="Center" xml:space="preserve" Text="退    出" FontSize="40" Foreground="White" />
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
