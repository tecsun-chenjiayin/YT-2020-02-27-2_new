<Window x:Class="YTH.TipWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YTH"
        xmlns:controls="clr-namespace:YTH.Controls"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Title="Window1"  Height="1080" Width="1920" WindowStyle="None" Background="Transparent">
    <Grid>
        <Border Name="area" Panel.ZIndex="2">
            <Grid>
                <Border Name="tipBorder" CornerRadius="15" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Name="tipValue"  TextWrapping="Wrap" Foreground="Black" FontSize="35" Margin="30,60,30,60">信息读取成功，请取回您的身份证</TextBlock>
                </Border>
                <controls:RotateAnimation x:Name="image"></controls:RotateAnimation>
            </Grid>
        </Border>
        <Border Background="Black" Opacity="0.41"></Border>
        
    </Grid>
</Window>
